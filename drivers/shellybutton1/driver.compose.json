{
  "name": {
    "en": "Shelly Button 1",
    "nl": "Shelly Button 1"
  },
  "images": {
    "large": "./assets/drivers/shellybutton1/images/large.jpg",
    "small": "./assets/drivers/shellybutton1/images/small.jpg"
  },
  "class": "button",
  "discovery": "shellybutton1",
  "$extends": [
    "defaults"
  ],
  "capabilities": [
    "measure_battery",
    "rssi"
  ],
  "energy": {
    "batteries": [
      "INTERNAL"
    ]
  },
  "pair": [
    {
      "id": "start",
      "navigation": {
        "next": "list_devices"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "icon_select"
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png"
      }
    },
    {
      "id": "add_device",
      "$template": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ]
}
