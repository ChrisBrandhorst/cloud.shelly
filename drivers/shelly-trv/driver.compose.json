{
  "name": {
    "en": "Shelly TRV",
    "nl": "Shelly TRV"
  },
  "images": {
    "xlarge": "./assets/drivers/shelly-trv/images/xlarge.jpg",
    "large": "./assets/drivers/shelly-trv/images/large.jpg",
    "small": "./assets/drivers/shelly-trv/images/small.jpg"
  },
  "class": "heater",
  "discovery": "shelly-trv",
  "$extends": [
    "defaults"
  ],
  "capabilities": [
    "target_temperature",
    "measure_temperature",
    "measure_battery",
    "valve_position",
    "valve_mode",
    "rssi"
  ],
  "pair": [
    {
      "id": "start",
      "navigation": {
        "next": "list_devices"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "icon_select"
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png"
      }
    },
    {
      "id": "add_device",
      "$template": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ],
  "energy": {
    "batteries": [
      "INTERNAL"
    ]
  }
}
