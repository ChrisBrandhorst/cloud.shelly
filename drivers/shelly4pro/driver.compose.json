{
  "name": {
    "en": "Shelly 4 Pro",
    "nl": "Shelly 4 Pro"
  },
  "class": "socket",
  "discovery": "shelly4pro",
  "$extends": [
    "defaults"
  ],
  "capabilities": [
    "onoff",
    "measure_power",
    "meter_power",
    "measure_voltage",
    "input_1",
    "measure_temperature"
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "icon_select"
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png"
      }
    },
    {
      "id": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ]
}
