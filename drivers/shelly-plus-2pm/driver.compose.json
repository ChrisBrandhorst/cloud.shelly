{
  "name": {
    "en": "Shelly Plus 2PM",
    "nl": "Shelly Plus 2PM"
  },
  "images": {
    "xlarge": "./assets/drivers/shelly-plus-2pm/images/xlarge.jpg",
    "large": "./assets/drivers/shelly-plus-2pm/images/large.jpg",
    "small": "./assets/drivers/shelly-plus-2pm/images/small.jpg"
  },
  "class": "socket",
  "discovery": "shelly-plus-2pm",
  "$extends": [
    "defaults"
  ],
  "capabilities": [
    "onoff",
    "measure_power",
    "meter_power",
    "measure_temperature",
    "input_1",
    "rssi"
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "icon_select"
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png"
      }
    },
    {
      "id": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ]
}
