{
  "name": {
    "en": "Shelly Humidity & Temperature",
    "nl": "Shelly Humidity & Temperature"
  },
  "images": {
    "large": "./assets/drivers/shellyht/images/large.jpg",
    "small": "./assets/drivers/shellyht/images/small.jpg"
  },
  "icon": "../assets/drivers/shellyht/icon.svg",
  "class": "sensor",
  "discovery": "shellyht",
  "$extends": [
    "defaults"
  ],
  "capabilities": [
    "measure_humidity",
    "measure_temperature",
    "measure_battery"
  ],
  "pair": [
    {
      "id": "start",
      "navigation": {
        "next": "list_devices"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "icon_select"
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png"
      }
    },
    {
      "id": "add_device",
      "$template": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ],
  "energy": {
    "batteries": [
      "CR123A"
    ]
  }
}
