{
  "name": {
    "en": "Shelly Motion Sensor",
    "nl": "Shelly Bewegingssensor"
  },
  "images": {
    "large": "./assets/drivers/shellymotion/images/large.jpg",
    "small": "./assets/drivers/shellymotion/images/small.jpg"
  },
  "class": "sensor",
  "$extends": [
    "defaults_cloud"
  ],
  "capabilities": [
    "alarm_motion",
    "measure_luminance",
    "measure_battery",
    "alarm_tamper",
    "rssi"
  ],
  "pair": [
    {
      "id": "start",
      "navigation": {
        "next": "login_oauth2"
      }
    },
    {
      "id": "login_oauth2",
      "template": "login_oauth2",
      "options": {
        "hint": "Log in with your Shelly account in the new window.",
        "button": "Log In"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "energy": {
    "batteries": [
      "INTERNAL"
    ]
  }
}
