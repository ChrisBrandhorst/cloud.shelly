{
  "name": {
    "en": "Shelly 2 Relay",
    "nl": "Shelly 2 Relay"
  },
  "images": {
    "large": "./assets/drivers/shelly2/images/large.jpg",
    "small": "./assets/drivers/shelly2/images/small.jpg"
  },
  "class": "socket",
  "$extends": [
    "defaults_cloud"
  ],
  "capabilities": [
    "onoff",
    "measure_power",
    "meter_power",
    "input_1",
    "rssi"
  ],
  "pair": [
    {
      "id": "login_oauth2",
      "template": "login_oauth2",
      "options": {
        "hint": "Log in with your Shelly account in the new window.",
        "button": "Log In"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "add_device"
      }
    },
    {
      "id": "add_device"
    }
  ]
}
