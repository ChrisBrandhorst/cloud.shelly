{
  "name": {
    "en": "Shelly Uni",
    "nl": "Shelly Uni"
  },
  "class": "socket",
  "discovery": "shellyuni",
  "$extends": [
    "shelly1"
  ],
  "capabilities": [
    "onoff",
    "measure_temperature.1",
    "measure_temperature.2",
    "measure_temperature.3",
    "measure_humidity",
    "input_1"
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "icon_select"
      }
    },
    {
      "id": "icon_select",
      "$template": "icon_select"
    },
    {
      "id": "get_device",
      "$template": "get_device"
    },
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "../../../assets/shelly-logo.png"
      }
    },
    {
      "id": "add_device"
    },
    {
      "id": "select_pairing",
      "$template": "select_pairing"
    },
    {
      "id": "manual_pairing",
      "$template": "manual_pairing"
    }
  ]
}
