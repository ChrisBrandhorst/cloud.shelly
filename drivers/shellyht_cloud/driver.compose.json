{
  "name": {
    "en": "Shelly Humidity & Temperature",
    "nl": "Shelly Humidity & Temperature"
  },
  "images": {
    "large": "./assets/drivers/shellyht/images/large.jpg",
    "small": "./assets/drivers/shellyht/images/small.jpg"
  },
  "class": "sensor",
  "$extends": [
    "defaults_cloud"
  ],
  "capabilities": [
    "measure_humidity",
    "measure_temperature",
    "measure_battery",
    "rssi"
  ],
  "pair": [
    {
      "id": "start",
      "$template": "start",
      "navigation": {
        "next": "login_oauth2"
      }
    },
    {
      "id": "login_oauth2",
      "template": "login_oauth2",
      "options": {
        "hint": "Log in with your Shelly account in the new window.",
        "button": "Log In"
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "energy": {
    "batteries": [
      "CR123A"
    ]
  }
}
